{{!-- Modal for note pop-up --}}
{{!-- loop through notes object, append notes to modal using jquery by creating a div under modal body  --}}

<div class="modal" tabindex="-1" role="dialog" id="note-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="note-id">My Thoughts on this Article</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      </div>
      <textarea id="note-text" rows="2" cols="100"></textarea>
      <div>
        <div class="saved-note"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-dark save-note">Save Note</button>
        <button type="button" class="btn btn-outline-dark close-note" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>